@model  ClienteModel
<h3>Cadastro de Clientes</h3>

<br />
<form asp-controller="Cliente" asp-action="Cadastro">
    <div class="form-group">        
        <label>Nome</label>        
        <input asp-for="Nome" type="text" class="form-control"/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>CPF ou CNPJ</label>
        <input asp-for="CPF" type="text" class="form-control"/>
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="text" class="form-control"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

<br />
<button class="btn btn-block btn-success" type="submit">Registrar</button>
</form>