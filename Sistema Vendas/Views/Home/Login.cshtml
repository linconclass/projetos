@model  LoginModel

@{
    Layout = null; //anula o looping
}

@{
    ViewData["Title"] = "Login";    
}


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
<link rel="stylesheet" href=~/css/site.css />

<style>
    body{
        background-color: indigo;
    }

</style>
<br /><br /><br /><br />
<div class="login-form">
    <form asp-controller="Home" asp-action="Login" method="post">
        <h2 class="text-center">Sistema Vendas</h2>        
        @{
            try
            {
                var erro = TempData["ErrorLogin"];
                <h5 class="tempdata text-danger">@erro</h5>
            }
            catch
            {
                
            }
        }
              
        <div class="form-group">
        	<div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <span class="fa fa-user"></span>
                    </span>                    
                </div>
                <input type="text" class="form-control" asp-for="Email" placeholder="Login">				                
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
		<div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-lock"></i>
                    </span>                    
                </div>
                <input type="password" class="form-control" asp-for="Senha" placeholder="Senha">				                
            </div>
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>        
        <div class="form-group">
            <button type="submit" class="btn btn-primary login-btn btn-block">Entrar</button>
        </div>
        <div class="clearfix">
            <label class="float-left form-check-label"><input type="checkbox"> Lembre minha senha</label>
           
        </div>
    </form>
    
</div>